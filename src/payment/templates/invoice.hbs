<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>LinguaHub Payment Invoice</title>
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');
      * { font-family: 'Inter', sans-serif; } body { font-family: Arial,
      sans-serif; line-height: 1.4; color: #333; max-width: 800px; margin: 0
      auto; padding: 20px; font-size: 14px; } .header { display: flex;
      justify-content: space-between; align-items: center; margin-bottom: 20px;
      padding-bottom: 10px; } .logo { display: flex; align-items: center;
      font-size: 20px; font-weight: bold; color: #0066cc; } .logo img { width:
      200px; height: auto; margin-right: 10px; } .booking-title { font-size:
      20px; font-weight: bold; color: #333; } .payment-info { background-color:
      #f0f8ff; padding: 8px; margin-bottom: 20px; border-radius: 5px;
      border-left: 4px solid #0066cc; } .details-container { display: flex;
      justify-content: space-between; margin-bottom: 20px; } .details-section {
      width: 48%; } .details-section h3 { margin-bottom: 8px; color: #0066cc;
      font-size: 16px; } table { width: 100%; margin-bottom: 20px; } th, td {
      padding: 10px; text-align: left; } th { background-color: #f0f8ff; color:
      #0066cc; font-weight: bold; } .total-row { font-weight: bold;
      background-color: #f0f8ff; } .thank-you { color: #0066cc; font-weight:
      bold; margin-bottom: 10px; font-size: 16px; } .signature { font-style:
      italic; margin-bottom: 20px; font-size: 14px; } .footer { display: flex;
      justify-content: space-between; padding-top: 20px; border-top: 2px solid
      #ddd; } .footer div { width: 48%; } .footer h4 { margin-bottom: 8px;
      color: #333; font-size: 14px; font-weight: bold; } .footer p { margin: 4px
      0; } .footer p:last-child { margin-top: 10px; }
    </style>
  </head>
  <body>
    <div class='header'>
      <div class='logo'>
        <img src='https://i.imgur.com/SuhBLRR.png' alt='LinguaHub Logo' />
      </div>
      <div class='booking-title'>Booking Payment</div>
    </div>

    <div class='payment-info'>
      <p>Payment ID: {{paymentId}}</p>
      <p>Payment Date: {{paymentDate}}</p>
    </div>

    <div class='details-container'>
      <div class='details-section'>
        <h3>Client Details</h3>
        <p>{{clientName}}</p>
        <p>{{clientEmail}}</p>
        <p>{{clientAddress}}</p>
        <p>{{clientPhone}}</p>
      </div>
      <div class='details-section'>
        <h3>Booking Details</h3>
        <p>Booking ID: {{bookingId}}</p>
        <p>Booking Date: {{bookingDate}}</p>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>SERVICE</th>
          <th>DURATION</th>
          <th style='text-align: right;'>PRICE</th>
          <th style='text-align: right;'>AMOUNT</th>
        </tr>
      </thead>
      <tbody>
        <tr style='padding-bottom: 32px; border-bottom: 2px solid #ddd;'>
          <td>{{serviceName}}</td>
          <td>{{serviceDuration}}</td>
          <td style='text-align: right;'>{{servicePrice}}</td>
          <td style='text-align: right;'>{{amount}}</td>
        </tr>
        <tr>
          <td colspan='3' style='text-align: right;'>Sub Total</td>
          <td style='text-align: right;'>{{amount}}</td>
        </tr>
        <tr>
          <td colspan='3' style='text-align: right;'>System Fee</td>
          <td style='text-align: right;'>{{systemFee}}</td>
        </tr>
        {{#if discount}}
          <tr>
            <td colspan='3' style='text-align: right;'>Discount</td>
            <td style='text-align: right;'>- {{discount}}</td>
          </tr>
        {{/if}}
        <tr class='total-row'>
          <td colspan='3' style='text-align: right;'>Total Amount</td>
          <td style='text-align: right;'>{{totalAmount}}</td>
        </tr>
      </tbody>
    </table>

    <div class='thank-you'>Thank you for your Booking</div>
    <div class='signature'>LinguaHub.inc</div>

    <div class='footer'>
      <div>
        <h4>Payment Details</h4>
        <p>Payment Method: {{paymentMethod}}</p>
      </div>
      <div>
        <h4>About Us</h4>
        <p>Address<br />
          Jl Salemba Raya 2 Ged Kenari Baru Bl D/5,<br />
          Dki Jakarta</p>
        <p>Contact<br />
          support.linguahub@gmail.com<br />
          (021) 123456789</p>
      </div>
    </div>
  </body>
</html>